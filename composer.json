{
    "name": "yabhq/mint",
    "description": "A collection of traits, macros and other helpers to keep your Laravel app feeling fresh.",
    "keywords": ["yab", "yabhq", "laravel", "mint", "macros", "traits", "helpers"],
    "homepage": "https://github.com/yabhq/mint",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jim",
            "email": "jimhlad@gmail.com"
        },
        {
            "name": "Chris",
            "email": "chris@chrisblackwell.me"
        }
    ],
    "require": {
        "php": "^7.3",
        "illuminate/support": "^8.0",
        "laravel/legacy-factories": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Yab\\Mint\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yab\\Mint\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
